[Unit]
Description=RPA Balance Loader API Server
After=network.target

[Service]
Type=simple
User=your-username
WorkingDirectory=/opt/balanceloader
ExecStart=/opt/balanceloader/venv/bin/python run_api.py
Restart=on-failure
RestartSec=10
Environment=PYTHONUNBUFFERED=1
Environment=RPA_API_HOST=127.0.0.1
Environment=RPA_API_PORT=8001

[Install]
WantedBy=multi-user.target