[Unit]
Description=RPA Balance Loader API Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/balancebot/balanceloader
ExecStart=/home/balancebot/balanceloader/venv/bin/python run_api.py
Restart=on-failure
RestartSec=10
Environment=PYTHONUNBUFFERED=1
Environment=RPA_API_PORT=8001

[Install]
WantedBy=multi-user.target